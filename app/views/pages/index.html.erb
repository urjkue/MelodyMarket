
<h3>Explore instruments</h3>

<div class="catalogue-links-container">
  <div class="single-link">
    <%= link_to "Piano", "#", class: "btn btn-outline-secondary" %>
  </div>
  <div class="single-link">
    <%= link_to "Guitar", "#", class: "btn btn-outline-secondary" %>
  </div>
  <div class="single-link">
    <%= link_to "Battery", "#", class: "btn btn-outline-secondary" %>
  </div>
  <div class="single-link">
    <%= link_to "Saxophone", "#", class: "btn btn-outline-secondary" %>
  </div>
  <div class="single-link">
    <%= link_to "Violin", "#", class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="string_card">
<h2>String Instruments</h2>
  <% @instruments.where(category:"String Instruments").each do |i| %>
 <div class="card-product">
        <a href="<%= instrument_path(i) %>">
          <%= image_tag 'Instruments/Piano/Piano1.jpg'%>
          <div class="card-product-infos">
            <h2 class="string-instruments"><%= i.name %></h2>

            <p>per/<%= i.price %>day</p>
          </div>
        </a>
      </div>
<% end %>
</div>



<div class="wind_card">
<h2>Wind Instruments</h2>
  <% @instruments.where(category:"Wind Instruments").each do |i| %>
  <%= render "shared/instrument_card1", i: i %>
<% end %>
</div>

