<h2><%= @ins.name %></h2>

<h2>Price: <%= @ins.price %> /day</h2>

<h2>Reviews for <%= @ins.name %></h2>

<ul>
  <% @reviews.each do |review| %>
    <li><%= review.comment %></li>
    <li>Rating: <%= review.rating %></li>
    <h2 id="person">from: <%= review.user.email %></h2>
  <% end %>
</ul>

<h2 id="description">
  Description
  <p>
    Amazing Instrument!!!!!!!
  </p>

  <%= form_tag("/booking", method: "get") do %>
    <%= hidden_field_tag(:user_id, current_user.id) %>
    <%= hidden_field_tag(:instrument_id, @ins.id) %>
    <%= date_field_tag(:starting_date, params[:starting_date], placeholder: "Starting Date") %>
    <%= date_field_tag(:ending_date, params[:ending_date], placeholder: "Ending Date") %>
    <%= submit_tag("Submit") %>
  <% end %>
</h2>

<hr>


<% if @booking.present?%>
<hr>
  <%= form_tag("/rev", method: "get") do %>
    <%= text_field_tag(:comment, params[:comment], placeholder:"comment") %>
    <%= text_field_tag(:rating , params[:rating], placeholder: "rating[1 to 5]") %>
    <%= hidden_field_tag(:ins_id, @ins.id)%>
    <%= hidden_field_tag(:usr_id , @current_user.id)%>
    <%= submit_tag("Submit") %>
  <% end %>

<hr>
<%end%>


