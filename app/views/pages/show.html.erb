<div class="show-home">
    <div class="ins">
      <h2><%= @ins.name %></h2>

      <h2>Price: <%= @ins.price %> /day</h2>
  </div>

  <div class="review">
    <h2>Reviews for <%= @ins.name %></h2>


    <% @reviews.each do |review| %>
      <%= review.comment %>

      <p>Rating: <%= review.rating %></p>
      <h2 id="person">from: <%= review.user.email %></h2>
    <% end %>
  </div>

  <div class="class">
    <h2 id="description">
      Description
      <p>
        Amazing Instrument!!!!!!!
      </p>

      <%= form_tag("/booking", method: "get") do %>
        <%= hidden_field_tag(:user_id, current_user.id) %>
        <%= hidden_field_tag(:instrument_id, @ins.id) %>
        <%= date_field_tag(:starting_date, params[:starting_date], placeholder: "Starting Date") %>
        <%= date_field_tag(:ending_date, params[:ending_date], placeholder: "Ending Date") %>
        <%= submit_tag("Submit") %>
      <% end %>
    </h2>
  </div>

  <div class="class">
    <hr>

    <h1>Map</h1>

    <hr>
  </div>

  <div class="class">
    <h2>Other Available Instruments</h2>
  </div>
</div>
